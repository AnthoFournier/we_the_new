{% extends 'Backend/base.html.twig' %}

{% block title %}
	Administration des livraisons client
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-2">
		<h1 class="text-center">Administration des livraison client</h1>
		<a href="{{ path('admin.delivery.create') }}" class="btn btn-primary">Créer une livraison</a>
		<table class="admin-table mt-4 table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Numéro de livraison</th>
					<th>Information de livraison</th>
					<th>Prix livraison</th>
					<th>Livraison active</th>
				</tr>
			</thead>
			<tbody>
				{% for delivery in deliveries %}
					<tr>
						<td>{{ delivery.id }}</td>
						<td>{{ delivery.name }}</td>
						<td>{{ delivery.description }}</td>
						<td>{{ delivery.price }}€</td>
						<td>{{ delivery.enable }}</td>
						<td class="actions">
							<div class="actions-container">
								<a href="{{ path('admin.delivery.edit', {id: delivery.id}) }}" class="btn btn-warning">Modifier</a>
								<twig:DeleteForm action="{{ path('admin.delivery.delete', {id: delivery.id}) }}" message="Voulez-vous vraiment supprimer cette livraison ?" csrftoken="{{ csrf_token('delete' ~ delivery.id) }}"/>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</section>
	{% endblock %}
