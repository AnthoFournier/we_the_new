<table class="admin-table mt-4">
	<thead>
		<tr>
			<th>Id</th>
			<th>Numéro</th>
			<th>Client</th>
			<th>Crée le</th>
			<th>Modifié le</th>
			<th>Status</th>
			<th>Prix</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for order in orders %}
			<tr>
				<td>{{order.id}}</td>
				<td>{{ order.number }}</td>
				<td>{{ order.user.fullName }}</td>
				<td>{{ order.createdAt|format_date() }}</td>
				<td>{{ order.updatedAt|format_date() }}</td>
				<td>{{ order.status }}</td>
				<td>{{ order.priceTTC|format_currency('EUR') }}</td>
				<td class="actions">
					<div class="actions-container">
						<a href="{{ path('admin.orders.edit', {id: order.id}) }}" class="btn btn-warning">Modifier</a>
					</div>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
